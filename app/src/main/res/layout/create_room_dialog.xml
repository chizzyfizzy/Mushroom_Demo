<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/createRoomPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Room Details for BUILDING NAME"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createRoomPlantName"
        android:layout_centerHorizontal="true"
        android:text="You Can Edit Individial Rooms Afterwards" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:text="Room Names:"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_below="@+id/textView15"
        android:text="(Single, Double, etc.)" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Number of Rooms: "
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Number of Bed Levels: "
        android:textColor="@android:color/black"
        android:layout_below="@+id/roomNumberEditText"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Number of Squares per Bed: "
        android:textColor="@android:color/black"
        android:layout_below="@+id/roomBedsEditTExt"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <EditText
        android:id="@+id/roomNameEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toEndOf="@+id/textView20"
        android:layout_toRightOf="@+id/textView20"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Double" />

    <EditText
        android:id="@+id/roomNumberEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView18"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignEnd="@+id/createRoomPlantName"
        android:layout_alignRight="@+id/createRoomPlantName"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/roomBedsEditTExt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView19"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignLeft="@+id/roomNumberEditText"
        android:layout_alignStart="@+id/roomNumberEditText"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/roomSquaresEditText"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/roomBedsEditTExt"
        android:layout_alignStart="@+id/roomBedsEditTExt"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/createRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:text="Create"
        android:layout_below="@+id/roomSquaresEditText"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

    <Button
        android:id="@+id/cancelRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/createRoomButton"
        android:layout_alignBottom="@+id/createRoomButton"
        android:layout_alignEnd="@+id/textView14"
        android:layout_alignRight="@+id/textView14"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Cancel" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed B + C contain extra level: "
        android:textColor="@android:color/black"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/roomSquaresEditText"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20" />

    <CheckBox
        android:id="@+id/roomPeakCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView23"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignEnd="@+id/roomSquaresEditText"
        android:layout_alignRight="@+id/roomSquaresEditText"
        android:text="Yes" />
</RelativeLayout>