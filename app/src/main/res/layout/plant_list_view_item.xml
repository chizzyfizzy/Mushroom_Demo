<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/plantNameListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Plant Name"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/plantLabelListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/plantNameListItem"
        android:layout_alignBottom="@+id/plantNameListItem"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_toEndOf="@+id/plantNameListItem"
        android:layout_toRightOf="@+id/plantNameListItem"
        android:text="Plant Label"
        android:textColor="#000050"
        android:textSize="20dp"
        android:textStyle="italic" />
</RelativeLayout>